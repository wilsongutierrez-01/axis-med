---
interface Props {
  imageSrc?: string;
  altText?: string;
  title?: string;
}

const { imageSrc, altText, title } = Astro.props;
---

<section
  class="relative w-screen left-1/2 -translate-x-1/2 h-[400px] md:h-[500px] lg:h-[600px] overflow-hidden"
>
  <img
    src={imageSrc}
    alt={altText}
    class="relative inset-0 w-full h-full object-cover"
  />

  <div
    class="absolute top-44 flex items-center justify-start h-full px-6 md:px-12"
  >
    <div class="max-w-xl bg-[#253D5A]/70 p-12 rounded-r-2xl">
      <h1 class="text-white text-2xl md:text-4xl font-bold leading-snug">
        {title}
      </h1>
    </div>
  </div>
</section>
